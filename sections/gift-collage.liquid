{{ 'gift-collage.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding gift-collage">
    <div class="gift-collage__left">
      <div>
        {%- if section.settings.left_badge != blank -%}
          <p class="gift-collage__badge">{{ section.settings.left_badge }}</p>
        {%- endif -%}
        {%- if section.settings.left_title != blank -%}
          <h2 class="gift-collage__title {{ section.settings.heading_size }}">{{ section.settings.left_title }}</h2>
        {%- endif -%}
        {%- if section.settings.left_description != blank -%}
          <p class="gift-collage__desc">{{ section.settings.left_description }}</p>
        {%- endif -%}
        {%- if section.settings.left_button_label != blank -%}
          <a
            class="gift-collage__link"
            {% if section.settings.left_button_link == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.left_button_link }}"
            {% endif %}
          >
            {{ section.settings.left_button_label | escape }}
          </a>
        {%- endif -%}
      </div>
      {%- if section.settings.left_image != blank -%}
        <div class="gift-collage__left-media">
          {{
            section.settings.left_image
            | image_url: width: 2000
            | image_tag: loading: 'lazy', widths: '360, 540, 720, 940, 1200, 1600, 2000'
          }}
        </div>
      {%- endif -%}
    </div>

    <div class="gift-collage__right">
      <div class="gift-collage__tile gift-collage__tile--wide">
        <div class="gift-collage__media">
          {%- if section.settings.tile1_image != blank -%}
            {{
              section.settings.tile1_image
              | image_url: width: 1800
              | image_tag: loading: 'lazy', widths: '360, 540, 720, 960, 1200, 1800'
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
        <div class="gift-collage__overlay">
          {%- if section.settings.tile1_badge != blank -%}
            <p class="gift-collage__badge">{{ section.settings.tile1_badge }}</p>
          {%- endif -%}
          {%- if section.settings.tile1_title != blank -%}
            <p class="gift-collage__tile-title h2">{{ section.settings.tile1_title }}</p>
          {%- endif -%}
          {%- if section.settings.tile1_button_label != blank -%}
            <a
              class="gift-collage__link"
              {% if section.settings.tile1_button_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.tile1_button_link }}"
              {% endif %}
            >
              {{ section.settings.tile1_button_label | escape }}
            </a>
          {%- endif -%}
        </div>
      </div>

      <div class="gift-collage__tile-grid">
        <div class="gift-collage__tile gift-collage__tile--compact">
          <div class="gift-collage__media">
            {%- if section.settings.tile2_image != blank -%}
              {{
                section.settings.tile2_image
                | image_url: width: 1200
                | image_tag: loading: 'lazy', widths: '360, 540, 720, 960, 1200'
              }}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
          <div class="gift-collage__overlay">
            {%- if section.settings.tile2_badge != blank -%}
              <p class="gift-collage__badge">{{ section.settings.tile2_badge }}</p>
            {%- endif -%}
            {%- if section.settings.tile2_title != blank -%}
              <p class="gift-collage__tile-title h3">{{ section.settings.tile2_title }}</p>
            {%- endif -%}
            {%- if section.settings.tile2_button_label != blank -%}
              <a
                class="gift-collage__link"
                {% if section.settings.tile2_button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.tile2_button_link }}"
                {% endif %}
              >
                {{ section.settings.tile2_button_label | escape }}
              </a>
            {%- endif -%}
          </div>
        </div>

        <div class="gift-collage__tile gift-collage__tile--compact">
          <div class="gift-collage__media">
            {%- if section.settings.tile3_image != blank -%}
              {{
                section.settings.tile3_image
                | image_url: width: 1200
                | image_tag: loading: 'lazy', widths: '360, 540, 720, 960, 1200'
              }}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
          <div class="gift-collage__overlay">
            {%- if section.settings.tile3_badge != blank -%}
              <p class="gift-collage__badge">{{ section.settings.tile3_badge }}</p>
            {%- endif -%}
            {%- if section.settings.tile3_title != blank -%}
              <p class="gift-collage__tile-title h3">{{ section.settings.tile3_title }}</p>
            {%- endif -%}
            {%- if section.settings.tile3_button_label != blank -%}
              <a
                class="gift-collage__link"
                {% if section.settings.tile3_button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.tile3_button_link }}"
                {% endif %}
              >
                {{ section.settings.tile3_button_label | escape }}
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

